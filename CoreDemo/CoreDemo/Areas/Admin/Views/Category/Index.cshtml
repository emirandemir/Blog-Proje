@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Kategori Listesi</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn"
                   onclick="return confirm('Silmek İstediğinizden Emin misiniz');" class="btn btn-info">Pasif Yap</a></td>

            <td><a href="#" class="btn btn-outline-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Category/CategoryAdd/" class="btn btn-primary">Kategori Ekle</a>
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page}))