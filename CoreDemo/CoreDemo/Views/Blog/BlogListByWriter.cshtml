@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>BlogListByWriter</h1>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluştuma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.BlogID</td>
                    <td>@item.BlogTitle</td>
                    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MM-yyyy"))</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.BlogStatus</td>
                    <td><a href="/Blog/BlogDelete/@item.BlogID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Blog/BlogUpdate/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
                </tr>
            }
    
</table>
        <a href="/Blog/AddBlog/" class="btn btn-info">Blog Ekle</a>